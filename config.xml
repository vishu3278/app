        <preference name="ShowSplashScreen" value="true" /> <!-- defaults to "true" -->
        <preference name="SplashScreenWidth" value="480" /> <!-- defaults to "170" -->
        <preference name="SplashScreenHeight" value="800" /> <!-- defaults to "200" -->
        
